<div id="page_contents">
    <%= render(:partial => "admin/navigation") %>
    <div id="center" class="column middle">
        <h1><%=translate('ROLES_LIST')%></h1>
        <br />
        <table>
            <% for manage_roles in @manage_roles %>
            <tr>
            <td><%=h manage_roles.id_role %></td>
            <td><%= link_to translate('SHOW'), {:action => 'show', :id => manage_roles.id_role} %></td>
            <td><%= link_to translate('DESTROY'), {:action => 'destroy', :id => manage_roles.id_role}, :confirm => 'Are you sure?', :method => :delete %></td>
            </tr>
            <% end %>
        </table>

        <br />

        <%= link_to translate('ADD_NEW_ROLE'), new_admin_manage_role_path %>
    </div>
</div>
