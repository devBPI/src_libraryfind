<div id="page_contents">
<%= render(:partial => "admin/navigation")%>
<div id="center"  class="column">
  <h2 ><%=translate("EDIT_PROVIDER_HEADER")%></h2>
  	<% form_for :provider, @provider, :url => { :action => "update", :id=>@provider}, :html=>{:name=>'provider_form',:id=>"edit_form"}  do |f| %>
